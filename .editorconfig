; top-most EditorConfig file
root = true

; Unix-style newlines
[*]
charset = utf-8
end_of_line = LF
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 120

[*.{php,html,twig}]
indent_style = space
indent_size = 4

[composer.json]
indent_style = space
indent_size = 4

[Dockerfile]
indent_style = space
indent_size = 4

[*.{yml,yaml}]
indent_style = space
indent_size = 2

[Makefile]
indent_style = tab
